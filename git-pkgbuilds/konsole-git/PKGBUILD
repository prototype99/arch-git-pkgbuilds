# Contributor: Andrea Scarpino <andrea@archlinux.org>

_pkgname=konsole
pkgname=${_pkgname}-git
pkgver=0
pkgrel=1
arch=(x86_64)
url='https://kde.org/applications/system/konsole-git/'
pkgdesc="KDE's terminal emulator"
license=(GPL LGPL FDL)
groups=(kde-applications-git kde-utilities-git kde-git)
depends=(knotifyconfig-git kpty-git kparts-git kinit-git knewstuff-git)
makedepends=(extra-cmake-modules-git kdoctools-git)
optdepends=('keditbookmarks-git: to manage bookmarks')
source=(${_pkgname}::git+https://anongit.kde.org/${_pkgname})
sha1sums=(SKIP )
options=(debug !strip)
conflicts=(${_pkgname})
provides=(${_pkgname})

pkgver() {
  cd $_pkgname
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cmake -B build -S ${_pkgname} \
    -DCMAKE_BUILD_TYPE=RelWithDebInfo \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
