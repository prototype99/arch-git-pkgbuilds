# $Id: PKGBUILD 328178 2018-07-10 13:33:04Z arojas $
# Maintainer: Antonio Rojas <arojas@archlinux.org>

_pkgname=breeze-gtk
pkgname=${_pkgname}-opt-git
pkgver=5.13.3
pkgrel=1
pkgdesc="Breeze widget theme for GTK 2 and 3"
arch=(x86_64)
url='https://quickgit.kde.org/?p=breeze-gtk-opt-git.git'
license=(LGPL)
depends=(qt5-base)
makedepends=(extra-cmake-modules-opt-git)
groups=(plasma-opt)
source=(${_pkgname}::git+https://anongit.kde.org/${_pkgname})
sha1sums=(SKIP )
options=(debug !strip)

pkgver() {
  cd $_pkgname
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare(){
  mkdir -p build
}

build(){
  export PATH="/opt/kde/bin:${PATH}"
  export XDG_DATA_DIRS="/opt/kde5/share:${XDG_DATA_DIRS}"

  cd build
  cmake ../${_pkgname} \
    -DCMAKE_INSTALL_PREFIX=/opt/kde \
    -DCMAKE_BUILD_TYPE=RelWithDebInfo \
    -DCMAKE_INSTALL_LIBDIR=lib
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
